@model Ocuda.Ops.Controllers.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        @* Content *@
        <div class="col-sm-8 oc-content">
            @foreach (var post in Model.SectionPosts)
            {
                <div class="card oc-content-card">
                    @if (post.IsPinned)
                    {
                        <div class="card-header oc-header oc-content-header-pinned d-flex">
                            <h3 class="card-title oc-title flex-grow-1">@post.Title</h3>
                            <span class="fa fa-star oc-content-header-icon"></span>
                        </div>
                    }
                    else
                    {
                        <div class="card-header oc-header oc-content-header d-flex">
                            <h3 class="card-title oc-title flex-grow-1">@post.Title</h3>
                        </div>
                    }
                    <div class="card-body">
                        @post.Content
                    </div>
                    <div class="card-footer oc-footer d-flex">
                        <div class="flex-grow-1">Posted by <a href="#">@post.CreatedBy</a></div>
                        <div>@post.CreatedAt.ToString("MM/dd/yyyy hh:mm tt")</div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-center">
                <ul class="pagination">
                    <li class="page-item m-1 p-1">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true"><</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="input-group m-1 p-1">
                        <input type="text" class="form-control" value="1" style="width:50px" />
                        <span class="input-group-text">of 48</span>
                    </li>
                    <li class="page-item m-1 p-1">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        @* End Content *@

        @* Sidebar *@
        <div class="col-sm-4 oc-sidebar">
            <div class="card oc-sidebar-card">
                <div class="card-header oc-header oc-sidebar-header d-flex justify-content-center">
                    <h5 class="oc-title">Department Staff</h5>
                </div>
                <div class="card-body oc-sidebar-body">
                    <div id="carouselDepartmentStaff" class="carousel slide" data-ride="carousel" data-interval="false">
                        <ul class="carousel-indicators">
                            <li data-target="#carouselDepartmentStaff" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselDepartmentStaff" data-slide-to="1"></li>
                        </ul>
                        <div class="carousel-inner bg-secondary">
                            <div class="carousel-item active">
                                <div class="d-flex justify-content-center bg-danger" style="height:250px">
                                    <span class="fa fa-smile mt-3" style="font-size:150px"></span>
                                    <h5 class="carousel-caption">Harry Potter</h5>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="d-flex justify-content-center bg-success" style="height:250px">
                                    <span class="fa fa-frown mt-3" style="font-size:150px"></span>
                                    <h5 class="carousel-caption">Draco Malfoy</h5>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselDepartmentStaff" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselDepartmentStaff" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>

            

            <div class="card oc-sidebar-card">
                <div class="card-header oc-header oc-sidebar-header d-flex justify-content-center">
                    <h5 class="oc-title">Department Links</h5>
                </div>
                <div class="card-body oc-sidebar-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var link in Model.SectionLinks)
                        {
                            <li class="list-group-item">
                                <a href="@link.Url" class="card-link">@link.Name</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer oc-footer d-flex justify-content-center">
                    <a href="#" class="card-link">All Links for Department</a>
                </div>
            </div>

            <div class="card oc-sidebar-card">
                <div class="card-header oc-header oc-sidebar-header d-flex justify-content-center">
                    <h5 class="oc-title">Department Files</h5>
                </div>
                <div class="card-body oc-sidebar-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var file in Model.SectionFiles)
                        {
                            <li class="list-group-item">
                                <a href="@file.FilePath" class="card-link"><span class="fa @file.Icon"></span> @file.Name</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer oc-footer">
                    <a href="#" class="card-link d-flex justify-content-center">Department File Directory</a>
                </div>
            </div>
        </div>
        @* End Sidebar *@
    </div>
</div>

