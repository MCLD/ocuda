@model Ocuda.Ops.Controllers.ViewModels.Home.IndexViewModel

<form id="editForm" role="form">
    <input id="editId" asp-for="Section.Id" type="hidden" />
    <div modal id="editModal" name="Featured Video" type="Ocuda.Utility.TagHelpers.ModalTypes.Edit">
        <input id="editUrl" asp-for="Section.FeaturedVideoUrl" formgroup />
    </div>
</form>

<div class="row">
    @* Blog Content *@
    <div class="col-sm-8 oc-blog">
        @if (Model.Posts.Count() == 0)
        {
            <div class="alert alert-warning">No Blog Posts Found</div>
        }
        else
        {
            @foreach (var post in Model.Posts)
            {
                <div class="card">
                    <a class="card-link flex-grow-1"
                       asp-controller="Posts"
                       asp-action="@nameof(PostsController.Display)"
                       asp-route-id="@post.Stub">
                        @if (post.IsPinned)
                        {
                            <div class="card-header oc-pinned d-flex">
                                <h1 class="card-title">@post.Title</h1>
                                <span class="card-title fa fa-thumbtack ml-auto align-self-center"></span>
                            </div>
                        }
                        else
                        {
                            <div class="card-header d-flex">
                                <h1 class="card-title">@post.Title</h1>
                            </div>
                        }
                    </a>
                    <div class="card-body">
                        @Html.Raw(post.Content)
                    </div>
                    <div class="card-footer d-flex">
                        <div class="flex-grow-1">Posted by <a href="#">@post.CreatedBy</a></div>
                        <div>@post.CreatedAt.ToString("MM/dd/yyyy hh:mm tt")</div>
                    </div>
                </div>
            }

            <div class="d-flex justify-content-center">
                @if (Model.PaginateModel.MaxPage > 1)
                {
                    <paginate paginateModel="@Model.PaginateModel"></paginate>
                }
            </div>
        }
    </div>
    @* End Blog Content *@

    @* Sidebar *@
    <div class="col-sm-4 oc-sidebar">
        @if (!string.IsNullOrWhiteSpace(Model.Section.FeaturedVideoUrl))
        {
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <span class="card-title fa fa-video align-self-center"></span>
                    <h2 class="card-title">Featured Video</h2>
                    <div class="card-title align-self-center dropdown">
                        <a href="#" class="card-title" role="button" id="dropdownConfigureVideo"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="fa fa-cog"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownConfigureVideo">
                            <button type="button"
                                    class="dropdown-item"
                                    data-toggle="modal"
                                    data-target="#editModal"
                                    data-id="@Model.Section.Id"
                                    data-url="@Model.Section.FeaturedVideoUrl">
                                Edit
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe src="@Model.Section.FeaturedVideoUrl"
                                frameborder="0"
                                allow="autoplay; encrypted-media"
                                allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        }

