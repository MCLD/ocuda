</div>

@section scripts
    {
    <script>
        $("#editForm").submit(function (e) {
            e.preventDefault();
            var id = $("#editId").val();
            var url = $('#editUrl').val();

            $.post("@(Url.Action("EditFeaturedVideoUrl", new { Area = "Admin", Controller = "Sections" }))",
                { sectionId: id, url: url },
                function (response) {
                    if (response.success == true) {
                        location.reload();
                    }
                    else {
                        alert(response.message);
                        ResetSpinners();
                    }
                });
        });

        $("#editModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var url = button.data("url");
            var modal = $(this);
            $("#editId").val(id);
            modal.find("#editUrl").val(url);
        });
    </script>
}