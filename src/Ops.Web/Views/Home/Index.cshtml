        <div class="card">
            <div class="card-header d-flex justify-content-center">
                <h2 class="card-title">Department Links</h2>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var link in Model.Links)
                    {
                        <li class="list-group-item">
                            <a href="@link.Url" class="card-link">@link.Name</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer d-flex justify-content-center">
                <a asp-controller="Links" asp-action="Index" class="card-link">All Links for Department</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex justify-content-center">
                <h2 class="card-title">Department Files</h2>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var file in Model.Files)
                    {
                        <li class="list-group-item">
                            <a asp-controller="Files" asp-action="ViewPrivateFile" asp-route-id="@file.Id" target="_blank" class="card-link">
                                <span class="@file.Icon"></span> @file.Name
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer d-flex justify-content-center">
