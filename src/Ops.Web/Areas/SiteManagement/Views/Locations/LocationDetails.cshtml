        <span class="validation-message text-danger"
              asp-validation-for="Location.PostFeatureSegmentId"></span>
    </div>

    @if (Model.VolunteerForms != null)
    {
        @foreach (var form in Model.VolunteerForms)
        {
            <div class="row form-group mb-3">
                <div class="col-form-label text-md-end col-md-3">
                    <label for="@form.FormMappings">@form.TypeName</label>
                </div>
                <div class="col-md-9">
                    @if (!form.IsDisabled)
                    {
                        @if (form.FormMappings?.Count > 0)
                        {
                            <table class="table table-sm table-bordered table-striped table-hover" id="staffRecipientTable">
                                <thead>
                                    <tr>
                                        <th class="button-column">Action</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody id="staffTableContent">
                                    @foreach (var formMapping in form.FormMappings)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <form method="post" role="form" asp-action="@nameof(Ocuda.Ops.Controllers.Areas.SiteManagement.LocationsController.RemoveFormUserMapping)"
                                                      asp-controller="@Ocuda.Ops.Controllers.Areas.SiteManagement.LocationsController.Name"
                                                      asp-route-locationStub="@Model.Location.Stub"
                                                      asp-route-userId="@formMapping.UserId"
                                                      asp-route-type="@form.TypeId">
                                                    <button class="btn btn-sm btn-outline-danger" type="submit">
                                                        <span class="fa-solid fa-circle-minus"></span>
                                                    </button>
                                                </form>
                                            </td>
                                            <td class="align-middle">
                                                @formMapping.Name
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        <button type="button"
                                class="btn btn-sm btn-outline-primary mt-1"
                                data-bs-toggle="modal"
                                data-bs-target="#addStaffModal"
                                data-formtype="@((VolunteerFormType)form.TypeId)"
                                data-formtypeid="@form.TypeId">
                            <span class="fa-solid fa-circle-plus" aria-hidden="true"></span>
                            Add staff
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            @form.AlertWarning
                        </div>
                    }
                </div>

            </div>

            <div modal
                 isLarge="true"
                 id="addStaffModal"
                 name="Staff Member"
                 type="Ocuda.Utility.TagHelpers.ModalTypes.Add"
                 suppress-footer="true"
                 data-backdrop="static">
                <input type="hidden" asp-for="@form.TypeId" />
                <div class="form-group mb-2">
                    <label for="staffSearchText">Search</label>
                    <div class="input-group">
                        <input type="text"
                               id="staffSearchText"
                               class="form-control"
                               aria-label="Search text" />
                        <button class="btn btn-outline-success"
                                id="staffSearchGo"
                                button-spinner>
                            Go
                        </button>
                    </div>
                </div>
                <table class="table table-sm table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody id="searchResults">
                        <tr><td colspan="2">No staff members found.</td></tr>
                    </tbody>
                </table>
                <div id="pagination" class="d-none"></div>
            </div>
        }
    }

    <div class="row mb-3">
        <div class="col-form-label text-md-end col-md-3">
            <label asp-for="Location.SocialCardId"></label>
        </div>
        <div class="col-md-9">
