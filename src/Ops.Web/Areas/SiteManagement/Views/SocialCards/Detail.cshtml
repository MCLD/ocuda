@model Ocuda.Ops.Controllers.Areas.SiteManagement.ViewModels.SocialCards.DetailViewModel

<form asp-action="@Model.Action" method="post" role="form">
    <input type="hidden" asp-for="LocationStub" />
    <div class="row">
        <div class="col-12">
            @if (Model.Action == nameof(SocialCardsController.Edit))
            {
                <input asp-for="SocialCard.Id" type="hidden" />
            }

            <input asp-for="SocialCard.Title" formgroup />
            <textarea asp-for="SocialCard.Description" formgroup></textarea>
            <input asp-for="SocialCard.Image" formgroup />
            <textarea asp-for="SocialCard.ImageAlt" formgroup></textarea>


            @if (!string.IsNullOrEmpty(Model.LocationStub))
            {
                <div class="row">
                    <label class="col-form-label text-md-end col-md-3">
                        Associated with location
                    </label>
                    <div class="mb-3-inner col-md-9">
                        <input type="text"
                               value="@Model.LocationStub"
                               class="form-control"
                               disabled />
                    </div>
                </div>
            }

            <div class="row mt-4">
                <div class="offset-md-3 col-md-9">
                    @if (!string.IsNullOrEmpty(Model.LocationStub))
                    {
                        <a class="btn btn-outline-secondary text-dark"
                           asp-action="@(nameof(LocationsController.Location))"
                           asp-controller="@LocationsController.Name"
                           asp-route-locationStub="@Model.LocationStub">Back</a>

                    }
                    else
                    {
                        <a class="btn btn-outline-secondary text-dark"
                           asp-action="@(nameof(PagesController.Index))">Cancel</a>
                    }
                    <button type="submit"
                            class="btn btn-success"
                            aria-label="Confirm"
                            buttonspinner>
                        <span class="fa fa-save" aria-hidden="true"></span>
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>