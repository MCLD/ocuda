@model Ocuda.Ops.Controllers.Areas.CoverIssue.ViewModels.Management.IndexViewModel

<h3>Cover Issues</h3>

<div class="modal fade" tabindex="-1" role="dialog" id="bookmarkletModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bookmarklet for reporting cover issues</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="bookmarklet-error-div" class="d-none">
                    <span class="fas fa-exclamation-triangle"></span>
                    <p id="bookmarklet-error-message" class="d-inline-block"></p>
                    <span class="fas fa-exclamation-triangle"></span>
                </div>
                <div id="bookmarklet-div" class="d-none">
                    <p>Drag this button on to your bookmarks toolbar so, that it's available while you are viewing an item. This bookmarklet only works with LEAP.</p>
                    <a href="" class="btn btn-info" id="bookmarkletButton">LEAP Cover Issue</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-2">
    <div class="col-12">
        <div class="d-inline-block">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a asp-action="@nameof(ManagementController.Index)"
                       asp-route-Type=""
                       class="nav-link"
                       ActiveBy routeKey="type" value=",@Ocuda.Utility.Models.CoverIssueType.Open">
                        @Ocuda.Utility.Models.CoverIssueType.Open.ToString()
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="@nameof(ManagementController.Index)"
                       asp-route-Type="@Ocuda.Utility.Models.CoverIssueType.Closed"
                       class="nav-link"
                       ActiveBy routeKey="type"
                       value="@Ocuda.Utility.Models.CoverIssueType.Closed">
                        @Ocuda.Utility.Models.CoverIssueType.Closed.ToString()
                    </a>
                </li>
            </ul>
        </div>
        <button class="btn btn-info float-right"
                data-toggle="modal"
                data-target="#bookmarkletModal">
            Bookmarklet
        </button>
    </div>
    <hr />
</div>
<table class="table table-sm table-bordered link-table">
    <thead>
        <tr>
            <th>Bib ID</th>
            <th>Resolved On</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.CoverIssueHeaders.Count == 0)
        {
            <tr>
                <td colspan="2">
                    No Issues Found
                </td>
            </tr>
        }
        else
        {
            @foreach (var header in Model.CoverIssueHeaders)
            {
                <tr>
                    <td>
                        <a asp-action="@(nameof(ManagementController.Details))" asp-route-id="@header.Id" class="rowlink">
                            @header.BibId
                        </a>
                    </td>
                    <td>@header.LastResolved?.ToShortDateString()</td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.PaginateModel.MaxPage > 1)
{
    <paginate paginateModel="@Model.PaginateModel"></paginate>
}

@section scripts {
    <script>
        $(window).on("load", function () {
            $(".rowlink").each(function () {
                $(this).height($(this).parent().height() + 11);
            });
        });
        $(window).resize(function () {
            $(".rowlink").each(function () {
                $(this).height($(this).parent().height() + 11);
            });
        });
        $('#bookmarkletModal').on('shown.bs.modal', function () {
            $.get("@Url.Action(nameof(ManagementController.GetBookmarklet))",
                function (response) {
                    if (response.success) {
                        $('#bookmarklet-div').removeClass("d-none");
                        $('#bookmarklet-error-div').addClass("d-none");
                        $("#bookmarkletButton").attr("href", response.bookmarklet);
                    }
                    else {
                        $('#bookmarklet-error-div').removeClass("d-none");
                        $('#bookmarklet-div').addClass("d-none");
                        console.log(response.message);
                        $("#bookmarklet-error-message").text(response.message);
                    }
            });
        });
        $("#bookmarkletButton").on("click", function (event) {
            event.preventDefault();
        });
    </script>
}
