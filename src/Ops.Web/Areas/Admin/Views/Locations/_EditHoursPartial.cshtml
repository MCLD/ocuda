@model Ocuda.Ops.Controllers.Areas.Admin.ViewModels.Location.LocationViewModel;

    <div class="container">
        <div id="modalItemInfo" class="col-xs-12 col">
            @for (int i = 0; i < 7; i++)
            {
                <div class="row container">
                    <div class="row">
                        <div class="row h5">@Enum.GetName(typeof(DayOfWeek), Model.AllLocationHours[i].DayOfWeek)</div>
                        <div class="dropdown show">
                            @if (Model.AllLocationHours[i].Open)
                            {
                                <button type="button" class="btn btn-success dropdown-toggle" id="hour-selector-@Model.AllLocationHours[i].Id" data-toggle="dropdown" data-isopen="1" aria-haspopup="true" aria-expanded="false">Open</button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger dropdown-toggle" id="hour-selector-@Model.AllLocationHours[i].Id" data-toggle="dropdown" data-isopen="0" aria-haspopup="true" aria-expanded="false">Closed</button>
                            }
                            <div class="dropdown-menu">
                                <li class="dropdown-item hours-item" data-hourid="@Model.AllLocationHours[i].Id" data-indexval="@i" data-hourval="1" href="#">Open</li>
                                <div class="dropdown-divider"></div>
                                <li class="dropdown-item hours-item" data-hourid="@Model.AllLocationHours[i].Id" data-indexval="@i" data-hourval="0" href="#">Closed</li>
                            </div>
                        </div>
                    </div>
                    <div class="row@(!Model.AllLocationHours[i].Open == true ? " d-none" : "")" id="hour-inputs-@Model.AllLocationHours[i].Id" data-hourid="@Model.AllLocationHours[i].Id">
                        <input asp-for="AllLocationHours[i].OpenTime" type="time" value="@Model.AllLocationHours[i].OpenTime?.ToString("HH:mm")" id="hour-open-@Model.AllLocationHours[i].DayOfWeek" data-hourid="@Model.AllLocationHours[i].Id" formgroup autocomplete="off" />
                        <input asp-for="AllLocationHours[i].CloseTime" type="time" value="@Model.AllLocationHours[i].CloseTime?.ToString("HH:mm")" id="hour-close-@Model.AllLocationHours[i].DayOfWeek" data-hourid="@Model.AllLocationHours[i].Id" formgroup autocomplete="off" />
                        <input value="@Model.AllLocationHours[i].Open" asp-for="AllLocationHours[i].Open" formgroup hidden />
                        <input value="@Model.AllLocationHours[i].Id" asp-for="AllLocationHours[i].Id" hidden />
                        <input value="@Model.AllLocationHours[i].LocationId" asp-for="AllLocationHours[i].LocationId" hidden />
                        <input value="@Model.AllLocationHours[i].DayOfWeek" asp-for="AllLocationHours[i].DayOfWeek" hidden />
                    </div>
                </div>
            }
        </div>
    </div>