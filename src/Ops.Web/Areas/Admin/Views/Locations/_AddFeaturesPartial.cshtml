@model Ocuda.Ops.Controllers.Areas.Admin.ViewModels.Location.FeatureListViewModel;

@if (Model.Features.Count() == 0)
{
    <div class="alert alert-warning">No Items found</div>
}
else
{
    <div>
        <table class="table table-sm table-bordered table-striped">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Stub</td>
                    <td>Body Text</td>
                    <td width="44px">&nbsp;</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var feature in Model.Features)
                {
                    <tr class="itemRow">
                        <td style="vertical-align:middle;">
                            @feature.Name
                        </td>
                        <td style="vertical-align:middle;">
                            @feature.Stub
                        </td>
                        <td style="vertical-align:middle;">
                            @feature.BodyText
                        </td>
                        <td>
                            <button type="button"
                                    class="btn btn-link btn-xs addgroupButton"
                                    data-itemid="@feature.Id">
                                <span class="fa fa-2x fa-plus-circle text-success" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.PaginateModel.MaxPage > 1)
    {
        <paginate paginateModel="@Model.PaginateModel" asButtons="true"></paginate>
    }
}
