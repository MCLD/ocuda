@model Ocuda.Ops.Controllers.Areas.Admin.ViewModels.Files.IndexViewModel

<form asp-controller="Files" asp-action="@(nameof(FilesController.Delete))" method="post" role="form">
    <input id="deleteCurrentPage" asp-for="PaginateModel.CurrentPage" type="hidden" />
    <input id="deleteName" asp-for="File.Name" type="hidden" />
    <input id="deleteId" asp-for="File.Id" type="hidden" />
    <div modal id="deleteModal" name="File" type="Ocuda.Utility.TagHelpers.ModalTypes.Delete"></div>
</form>

<div class="mb-2">
    <a class="btn btn-outline-secondary text-dark" asp-action="@(nameof(FilesController.Create))">Add New File</a>
    <a class="btn btn-secondary float-right" asp-action="@(nameof(FilesController.Categories))">Manage Categories</a>
</div>

<div class="row mb-2">
    <div class="col">
        <span>Category: </span>
        <a class="dropdown-toggle" href="#" role="button" id="dropdownCategory"
           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @(Model.CategoryName ?? "Show All")
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownCategory">
            <li><a class="dropdown-item" asp-route-categoryId="">Show All</a></li>
            @foreach (var category in Model.Categories)
            {
                <li><a class="dropdown-item" asp-route-categoryId="@category.Id">@category.Name</a></li>
            }
        </ul>
    </div>
</div>

@if (Model.Files.Count() == 0)
{
    <div class="alert alert-warning">No Files Found</div>
}
else
{
    <table class="table table-sm table-bordered link-table">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Description</th>
                <th>Creator</th>
                <th>Creation Date</th>
                <th>Featured</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.Files)
            {
                <tr>
                    <td class="rowlink-parent">
                        <a asp-action="@(nameof(FilesController.Edit))" asp-route-id="@file.Id" class="rowlink">
                            <span class="fa @file.Icon"></span> @file.Name
                        </a>
                    </td>
                    <td>@file.Description</td>
                    <td>@file.CreatedBy</td>
                    <td>@file.CreatedAt</td>
                    <td>@file.IsFeatured</td>
                    <td align="center" class="on-top">
                        <button type="button"
                                class="btn btn-danger btn-xs"
                                data-toggle="modal"
                                data-target="#deleteModal"
                                data-id="@file.Id"
                                data-filename="@file.Name">
                            <span class="fa fa-times" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.PaginateModel.MaxPage > 1)
    {
        <paginate paginateModel="@Model.PaginateModel"></paginate>
    }
}

@section scripts
    {
    <script>
        $(document).ready(function () {
            $('.rowlink-parent').each(function () {
                $(this).children('a.rowlink').height($(this).height() + 12);
            });
        });
        $(window).resize(function () {
            $('.rowlink-parent').each(function () {
                $(this).children('a.rowlink').height($(this).height() + 12);
            });
        });

        $("#deleteModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var filename = button.data("filename");
            var modal = $(this);
            $("#deleteName").val(filename);
            $("#deleteId").val(id);
            modal.find(".modal-text").text(" Are you sure you want to delete \"" + filename + "\"?");
        });
    </script>
}