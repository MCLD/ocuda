@model Ocuda.Ops.Controllers.Areas.Admin.ViewModels.Links.DetailViewModel

<form asp-action="@Model.Action" method="post" role="form">
    <input asp-for="@Model.SectionId" type="hidden" />
    @if (Model.Action == nameof(LinksController.Edit))
    {
        <input asp-for="Link.Id" type="hidden" />
    }

    <input asp-for="Link.Name" formgroup />
    <input asp-for="Link.Url" formgroup />

    @if (Model.Categories != null && Model.Categories.Count() > 0)
    {
        <select class="w-auto" asp-for="Link.CategoryId" formgroup>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    }

    <select class="w-auto" asp-for="Link.IsFeatured" formgroup>
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>

    <div class="row">
        <div class="offset-md-3 col-md-9">
            <a class="btn btn-outline-secondary text-dark" asp-action="@(nameof(LinksController.Index))">Cancel</a>
            <button type="submit" class="btn btn-success btn-spinner" aria-label="Confirm">
                <span class="fa fa-save" aria-hidden="true"></span>
                Save
                <span class="fa fa-spinner fa-pulse fa-fw d-none"></span>
            </button>
        </div>
    </div>
</form>