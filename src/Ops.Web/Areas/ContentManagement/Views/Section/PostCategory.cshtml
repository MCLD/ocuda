@model Ocuda.Ops.Controllers.Areas.ContentManagement.ViewModels.SectionViewModel
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="@Url.Action(nameof(SectionController.Section), new { sectionStub = Model.Section.Stub})" class="navbar-brand">@Model.Section.Name</a>
        <a class="nav-link"
           href="@Url.Action(nameof(SectionController.PostCategory),
            new { sectionStub = Model.Section.Stub,
            page=1})">
            Posts
        </a>
        <a href="#">Files</a>
    </nav>
<div class="mx-auto col-6">
    <h4>
        <a href="@Url.Action(nameof(SectionController.Section), new { sectionStub = Model.Section.Stub})">@Model.Section.Name</a>
    </h4>
    @if (Model.AllPostCategories != null)
    {
        <div class="row">
            <h5>Categories</h5>
        </div>
        <div class="d-flex flex-wrap">
            <div class="row">
                @foreach (var category in Model.AllPostCategories)
                {
                    <div class="col-3">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="text-center">@category.Name</h5>
                            </div>
                            <div class="card-body text-center">
                                <a href="@Url.Action(nameof(SectionController.PostCategory),
                                            new { sectionStub = Model.Section.Stub, categoryStub = category.Stub} )"
                                   class="btn btn-primary">View Posts</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div>
            <h4>Posts By Category: @Model.Category.Name</h4>
        </div>
        @foreach (var post in Model.AllPostCategoryPosts)
        {
            <div class="mx-auto">
                <div class="card m-3">
                    <div class="card-header">
                        <div class="row" style="transform: rotate(0);">
                            <div class="col">
                                <div class="h5 row font-italic">
                                    @post.Title
                                </div>
                                <div class="row font-italic">Posted: @post.PublishedAt.ToString("MM/dd/yyyy hh:mm tt")</div>
                            </div>
                            <a href="@Url.Action(nameof(SectionController.Post),
                               new { sectionStub = Model.Section.Stub, postId = post.Id})"
                               class="stretched-link"></a>
                        </div>
                        <div class="row">
                            @foreach (var category in Model.SectionCategories.Where(_ => _.Id == post.PostCategoryId))
                            {
                                <i>
                                    Category:
                                    <a href="@Url.Action(nameof(SectionController.PostCategory),
                                       new { sectionStub = Model.Section.Stub, categoryStub = category.Stub} )"
                                       class="badge badge-pill badge-info"
                                       style="position: relative;">
                                       @category.Name</a>
                                </i>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        @post.Content.Substring(0, 250)...
                    </div>
                </div>
                </div>
        }
    }
    @if (Model.PaginateModel.MaxPage > 1)
    {
        <paginate paginateModel="@Model.PaginateModel"></paginate>
    }
</div>