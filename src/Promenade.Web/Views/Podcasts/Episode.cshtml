@model Ocuda.Promenade.Controllers.ViewModels.Podcasts.EpisodeViewModel

<div class="row">
    <div class="col-12">
        <h1 class="mb-2">@Model.PodcastItem.Title</h1>
        <div class="mb-4">
            <em>
                <a href="@Url.Action(nameof(PodcastsController.Podcast), new { stub = Model.Podcast.Stub})">@Model.Podcast.Title Podcast</a>,
                episode @Model.PodcastItem.Episode,
                published @Model.PodcastItem.PublishDate.Value.ToLongDateString().
            </em>
        </div>
        <audio controls class="mb-2 w-100">
            <source src="@Model.PodcastItem.MediaUrl" type="@Model.PodcastItem.MediaType" />
        </audio>
        <p>@Model.PodcastItem.Description</p>
        <div><em>Keywords: @Model.PodcastItem.Keywords</em></div>
    </div>
</div>
