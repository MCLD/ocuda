@model Ocuda.Promenade.Controllers.ViewModels.LocationViewModel
@{
    ViewData["Title"] = "LocationDetails";
}
<html>
<body>
    <div id="content" class="location-page">
        <img src="@Model.Location.ImagePath" class="branch-image" />
        <h1>
            @Model.Location.Name
            <a href="@Model.Location.MapLink" class="btn btn-default map-button" target="_blank">
                <span class="fas fa-map-marker-alt"></span> Map
            </a>
        </h1>
        <table class="address-hours">
            <tbody>
                <tr>
                    <td class="address">
                        <p>
                            @Model.Location.Address
                            <br />
                            @Model.Location.City, @Model.Location.State @Model.Location.Zip
                            <br />
                            <a href="tel:+1 @Model.Location.Phone">@Model.Location.Phone</a>
                        </p>
                    </td>
                    <td class="hours">
                        <strong>Mon. - Sun.</strong> Closed<br />
                    </td>
                </tr>
            </tbody>
        </table>
        <h2>Information</h2>
        <p>@Model.Location.Description</p>
        <div>
            <div>
                <a href="@Model.Location.EventLinkId" target="_blank">Browse Events</a>
            </div>
            <div>
                <a href="@Model.Location.SubscriptionLinkId" target="_blank">Send Me Events</a>
            </div>
        </div>
        <div class="row branch-features text-center">
            @foreach (var feature in Model.LocationFeatures)
            {
                <text>
                    <div class="col-xs-2">
                            <a href="@feature.RedirectUrl" target="_blank">
                                <span class="fa-stack fa-2x" style="color:#007bff">
                                    <span class="fa fa-square fa-stack-2x"></span>
                                    <span class="@feature.FontAwesome">
                                    </span>
                                </span>
                            </a>
                            <div>
                                <a class="bring-modal" href="@Url.Action("Find", "Home", new {locationStub=Model.Location.Stub,featureStub=feature.Stub})" data-toggle="modal" data-target="#featureModal" data-feature="@feature.Stub">@feature.Name</a>
                            </div>
                    </div>
                    </text>
                }
        </div>
        @if (Model.NearbyCount > 1)
        {
            <div>
                <a name="nearby"></a>
                <h2>Nearby Locations</h2>
                <p>The @Model.Location.Name has other locations nearby.</p>
                <div class="row">
                    <div class="col-xs-4">

                    </div>
                    <div class="col-xs-7">
                        <table class="neighbor-locations">
                            <tbody>
                                @{ int counter = 1;}
                                @foreach (var location in Model.NearbyLocations)
                                {
                                    <text>
                                        <tr>
                                            <td>@counter</td>
                                            <td>
                                                <a href="/Locations/@location.Stub">@location.Name</a>
                                            </td>
                                            <td>
                                                <a href="@location.EventLinkId"><span class="fa fa-calendar"></span> Events</a>
                                                <a href="@location.SubscriptionLinkId"><span class="fa fa-envelope-o"></span> Mailing List</a>
                                            </td>
                                        </tr>
                                    </text>
                                    counter++;
                                }
                                <tr>
                                    <td colspan="2">&nbsp;</td>
                                    <td>
                                        <a href="/subscribe/?@foreach (var location in Model.NearbyLocations) {<text>list=@location.SubscriptionLinkId&</text> }" class="btn btn-default btn-sm" target="_blank">
                                            @if (Model.NearbyLocations.Count() > 1)
                                            {
                                                <text><span class="fa fa-envelope-o"></span>Updates from all @Model.NearbyLocations.Count() locations</text>
                                            }
                                            else
                                            {
                                                <text><span class="fa fa-envelope-o"></span>Updates from the location</text>
                                            }
                                        </a>
                                    </td>

                                </tr>

                            </tbody>

                        </table>

                    </div>

                </div>

            </div>
        }
    </div>
    <div class="modal fade" id="featureModal" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <p id="modal-body">
                        </p>
                    </div>
                    <div>
                        <p id="modal-text">

                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
        <script>
                $('.bring-modal').on('click', function () {
                    @foreach (var feature in Model.LocationFeatures)
                    {
                        <text>
                        if ("@feature.Stub" == $(this).data("feature"))
                        {
                            $("#modalTitle").text("@feature.Name");
                            $("#modal-body").text("@feature.BodyText");
                            $("#modal-text").text("@feature.Text");
                        }
                        </text>
                    }

                    $('#featureModal').on('shown.bs.modal', function () {
                        $('#myInput').trigger('focus')
                    });
                });
        </script>
    }
</body>
</html>
