# Get build image
FROM microsoft/dotnet:2.1-sdk AS dotnet-sdk
WORKDIR /app

# Copy source
COPY . ./

# Run restore and build
RUN dotnet build -c Release

# Run tests
RUN find UnitTests/ -path "*/bin/*Test.dll" |xargs dotnet vstest --parallel

# Publish
RUN dotnet publish -c Release -o "/app/publish/ops" "src/Ops.Web" --no-build

# Get runtime image
FROM microsoft/dotnet:2.1-aspnetcore-runtime
WORKDIR /app

# Bring in metadata
ARG commit=unknown

LABEL ocuda.commit=$commit
LABEL maintainer="Maricopa County Library District developers <development@mcldaz.org>"

# Copy source
COPY --from=dotnet-sdk "/app/publish/ops" .

# Persist shared directory
VOLUME ["/app/shared"]

# Port 80 for http
EXPOSE 80

# Set entrypoint
ENTRYPOINT ["dotnet", "Ocuda.Ops.Web.dll"]
